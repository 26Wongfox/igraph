
#######################################
# The basic interface
#######################################

igraph_empty:
        PARAM-list:
            graph:
              type: GRAPH
              mode: OUT
            n:
              type: INTEGER
              default: 0
            directed:
              type: BOOLEAN
              default: True
        RETURN: ERROR  

igraph_add_edges:
        PARAM-list:
            graph:
              type: GRAPH
              mode: INOUT
            edges:
              type: VECTOR
            attr:
              type: ATTRIBUTES
        NAME-R: add.edges
        RETURN: ERROR
        IGNORE: RR, RC

igraph_vcount:
        PARAM-list:
            graph:
              type: GRAPH	
        NAME-R: vcount
        RETURN: INTEGERPTR

#######################################
# Components
#######################################

igraph_clusters:
        PARAM-list:
            graph:
              type: GRAPH
            membership:
              type: VECTOR
              mode: OUT
            csize: 
              type: VECTOR
              mode: OUT
            no:
              type: INTEGERPTR
              mode: OUT
            mode:
              type: CONNECTEDNESS
              default: WEAK
        NAME-R: clusters
        RETURN: ERROR

#######################################
# Layouts
#######################################

igraph_layout_fruchterman_reingold:
        PARAM-list:
            graph:
               type: GRAPH
            res:
               type: MATRIX
               mode: OUT
            niter:
               type: INTEGER
            maxdelta:
               type: REAL
            area:
               type: REAL
            coolexp:
               type: REAL
            repulserad:
               type: REAL
            use_seed:
               type: NULL
            weight:
               type: VECTOR_OR_0
        NAME-R: layout.fruchterman.reingold
        RETURN: ERROR
        FLAGS: PROGRESS
        IGNORE: RR

igraph_layout_graphopt:
        PARAM-list:
            graph:
               type: GRAPH
            res:
               type: MATRIX
               mode: OUT
            niter:
               type: INTEGER
               default: 500
            node_charge:
               type: REAL
               default: 0.001
            node_mass:
               type: REAL
               default: 30
            spring_length:
               type: INTEGER
               default: 0
            spring_constant:
               type: REAL
               default: 1
            max_sa_movement:
               type: REAL
               default: 5
            use_seed:
               type: NULL
        NAME-R: layout.graphopt
        RETURN: ERROR
        FLAGS: PROGRESS

#######################################
# Structure generators
#######################################

igraph_lcf_vector:
        PARAM-list:
            graph:
              type: GRAPH
              mode: OUT
            n:
              type: INTEGER
            shifts:
              type: VECTOR
            repeats:
              type: INTEGER
        NAME-R: graph.lcf
        RETURN: ERROR
