
# The igraph interface

export(graph.empty, add.edges, add.vertices, delete.edges,
       delete.vertices, vcount, ecount, neighbors)

export(add.graph.attribute,delete.graph.attribute,
       get.graph.attribute,set.graph.attribute,
       add.vertex.attribute,delete.vertex.attribute,
       get.vertex.attribute,set.vertex.attribute,
       add.edge.attribute,delete.edge.attribute,
       get.edge.attribute,set.edge.attribute)

export(igraph.iterator, igraph.next, igraph.get, igraph.end,
       igraph.prev, igraph.getattr)

# igraph storage types, indexed edge list

S3method(graph.empty, indexededgelist.default)
S3method(add.edges, indexededgelist.default)
S3method(add.vertices, indexededgelist.default)
S3method(delete.edges, indexededgelist.default)
S3method(delete.vertices, indexededgelist.default)
S3method(vcount, indexededgelist.default)
S3method(ecount, indexededgelist.default)
S3method(neighbors, indexededgelist.default)
       
S3method(add.graph.attribute, indexededgelist.default)
S3method(delete.graph.attribute, indexededgelist.default)
S3method(get.graph.attribute, indexededgelist.default)
S3method(set.graph.attribute, indexededgelist.default)
S3method(add.vertex.attribute, indexededgelist.default)
S3method(delete.vertex.attribute, indexededgelist.default)
S3method(get.vertex.attribute, indexededgelist.default)
S3method(set.vertex.attribute, indexededgelist.default)
S3method(add.edge.attribute, indexededgelist.default)
S3method(delete.edge.attribute, indexededgelist.default)
S3method(get.edge.attribute, indexededgelist.default)
S3method(set.edge.attribute, indexededgelist.default)

S3method(igraph.iterator, indexededgelist.default)

# common functions, basic not structural operations
export(is.graph)

# common functions, attribute related

export(g.a, "g.a<-", v.a, "v.a<-", e.a, "e.a<-")
export(is.directed, igraph.type)

# common functions, screen related 

export(print.graph, summary.graph)

# common functions, basic structural info

export(are.connected)

# common functions, graph generators

export(graph, graph.adjacency, graph.star, graph.lattice, graph.ring,
       graph.tree)

# common functions, graph generators, games

export(ba.game, barabasi.game, erdos.renyi.game, random.graph.game,
       degree.sequence.game, growing.random.game, aging.prefatt.game)

# common functions, (not so basic) structural properties

export(diameter, degree, degree.distribution, closeness,
       shortest.paths, get.shortest.paths, cocitation, bibcoupling,
       evcent) 

S3method(degree, default)
S3method(degree, indexededgelist)

# common functions, components and similar

export(clusters, cluster.distribution, subcomponent, subgraph, betweenness,
       edge.betweenness, is.connected)

# common: conversion

export(get.adjacency, get.edgelist, simplify)

# plotting

export(layout.random, layout.circle, layout.fruchterman.reingold,
       layout.kamada.kawai, layout.spring)

export(tkplot, 
       tkplot.close, tkplot.off, tkplot.fit.to.screen, tkplot.reshape,
       tkplot.export.postscript, tkplot.getcoords, tkplot.center,
       tkplot.rotate)

export(plot.graph)

# parameters

export(igraph.par)

# foreign file formats

export(read.graph, read.graph.pajek, 
       read.graph.edgelist, write.graph, write.graph.edgelist)

# fitting

export(power.law.fit)

# community structure

export(edge.type.matrix, eb.community, cut.community, modularity,
       eb.community2)

# other, not graph related

export(running.mean)

# measuring dynamics

export(measure.dynamics.idage)

# minimum spanning tree

export(minimum.spanning.tree)
